<div id='home', class='big-bg'>
  <%= render 'shared/header' %>

  <div class='main-content'>
    <div class='form-box'>
      <div class='list'>
        <h3><%= link_to "uchino_aji", "/", class: 'main-subtitle' %></h3><br />
        <h2>うちの調味料登録</h2>

        <%= form_with model: @seasoning, url: seasonings_path, method: :post, local: true do |f| %>
          
          <div class="form">
            <span class='optional'>(任意)</span>
            <%= f.label "塩・砂糖", class: 'form-label' %><br />
            <%#= f.text_field :favorite_dish, autocomplete: "favorite-dish", class: 'form-field' %>
            <%= f.collection_check_boxes(:salt_sugar_id, SaltSugar.all, :id, :name, {}, {class: 'check_box', id:'salt-sugar'}) %>
          </div>

          <div class="actions">
            <%= f.submit "登録", class: 'recipe-detail-btn' %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
