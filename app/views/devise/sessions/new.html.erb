<div id='home', class='big-bg'>

  <div class='main-content'>
    <div class='form-box'>
      <div class='list'>
        <h3 class='main-subtitle'>uchino_aji</h3>
        <h2>ログイン情報入力</h2>

        <%= form_with model: @user, url: user_session_path, method: :post do |f| %>
          <div class='form'>
            <%= f.label "メールアドレス", class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field' %>
          </div>

          <div class="form">
            <%= f.label "パスワード (半角英数字8文字以上)", class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-field' %>
          </div>

          <%# if devise_mapping.rememberable? %>
            <%# <div class="field"> %>
              <%#= f.check_box :remember_me %>
              <%#= f.label :remember_me %>
            <%# </div> %>
          <%# end %>

          <div class="actions">
            <%= f.submit "ログイン", class: 'recipe-detail-btn' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
